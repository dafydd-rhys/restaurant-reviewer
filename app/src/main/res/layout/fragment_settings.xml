<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/background_white10"
        >

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nightMode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_night"
                android:background="@drawable/background_teal200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/switch_night"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/nightMode"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/nightmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_notification"
                android:background="@drawable/background_orange200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/notifications"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/notification"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:switchMinWidth="50dp"
                />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/background_white10"
        >

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/security"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_lock"
                android:background="@drawable/background_teal200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/security_amp_privacy"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/security"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                android:background="@drawable/icon_arrow_forward"
                android:rotation="180"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/textSize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_text"
                android:background="@drawable/background_orange200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/test_size"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/textSize"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                android:background="@drawable/icon_arrow_forward"
                android:rotation="180"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/language"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_map"
                android:background="@drawable/background_red200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/language"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/language"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                android:background="@drawable/icon_arrow_forward"
                android:rotation="180"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/background_white10"
        >

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/messageUs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_message"
                android:background="@drawable/background_teal200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/contact_us"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/messageUs"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                android:background="@drawable/icon_arrow_forward"
                android:rotation="180"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/help"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_info"
                android:background="@drawable/background_orange200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/help_amp_information"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/help"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                android:background="@drawable/icon_arrow_forward"
                android:rotation="180"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/background_white10"
        >

        <RelativeLayout
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_logout"
                android:background="@drawable/background_teal200"
                android:padding="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@id/logout"
                android:layout_marginStart="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="50dp"
                android:background="@drawable/icon_arrow_forward"
                android:rotation="180"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>